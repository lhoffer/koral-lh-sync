<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}

    <style type="text/css">
        body.shipping-international tbody.total-line-table__tbody::after {
            content: 'Duties and taxes are not included.';
            padding-top: 0.75em;
            display: table-cell;
            font-weight: bold;
        }
    </style>
    
    {% capture gtm_head_content %}{% include 'gtm-head' %}{% endcapture %}
    {% unless gtm_head_content contains 'Liquid error' %}
      {{ gtm_head_content }}
    {% endunless %}
    
  
                <!-- Global-e CSS Start-->
                <link id="GEPIStyles" rel="stylesheet" href="//gex.global-e.com/gempro/css/10000566" />
                <!-- Global-e CSS End-->
                </head>
  <body>
    
    {% capture gtm_body_content %}{% include 'gtm-body' %}{% endcapture %}
    {% unless gtm_body_content contains 'Liquid error' %}
      {{ gtm_body_content }}
    {% endunless %}
    
    {{ skip_to_content_link }}

    <div class="banner" data-header>
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </div>

    {{ order_summary_toggle }}

    <div class="content" data-content>
      <div class="wrap">
        <div class="main" role="main">
          <div class="main__header">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </div>
          <div class="main__content">
            {{ content_for_layout }}
            <div class="international-msg">
  				<h3 class="section__title" style="padding: 15px 5px; margin-top: 25px; font-weight: 300;">IMPORTANT: Any customs taxes or import duties will be billed directly to international customers once the parcel reaches its destination country.</h2>
            </div>
          </div>
          <div class="main__footer">
            {{ content_for_footer }}
          </div>
        </div>
        <div class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </div>
      </div>
    </div>

    {{ tracking_code }}

    <script type="text/javascript">
        let countrySelect = document.getElementById('checkout_shipping_address_country');
        let updateCountry = () => {
            if (countrySelect.options[countrySelect.selectedIndex].value == 'United States')
                document.body.classList.remove('shipping-international');
            else
                document.body.classList.add('shipping-international');
        };
        countrySelect.addEventListener('change', updateCountry);
        updateCountry();
    </script>
  
                <!-- Global-e Script Start-->
                <script id="globaleScript">
                  (function () {
                    var reg = /showpro=(true|false)/i;
                    var showpro = ((reg.exec(document.location.search) || reg.exec(document.cookie) || [])[1] || '').toLowerCase();
                    var s = document.createElement('script');
                    s.type = 'text/javascript';
                    s.async = true;
                    s.src = '//gex.global-e.com/gempro/get/10000566' + (showpro ? '?showpro=' + showpro : '');
                    document.getElementsByTagName('head')[0].appendChild(s);

                    if (showpro) {
                        var cssElement = document.createElement('link');
                        cssElement.rel = 'stylesheet';
                        cssElement.id = 'GEPIStyles';
                        cssElement.href = '//gex.global-e.com/gempro/css/10000566?showpro=' + showpro;
                        document.cookie = 'showpro=' + showpro;
                        document.getElementsByTagName('head')[0].appendChild(cssElement);  
                    }

                    //GlobalE_Gem_Data cookie
                    var name = 'GlobalE_Gem_Data';
                    var value = JSON.stringify({ StoreCode : 'koralactivewear' });
                    var days = 10;

                    var date = new Date();
                    date.setTime(date.getTime() + (days*24*60*60*1000));
                    var expires = '; expires=' + date.toUTCString();
                    document.cookie = name + ' = ' + (value || '')  + expires + '; path =/ ';
                })()
                </script>
                {% if customer.id  %}
                    <input type="hidden" name="customer_id" id="customer_id" value="{{ customer.id }}_{{ customer.id | append: "!#Gl0b@lE-$3cr3t!)%1#" | sha1 }}">
                {% endif %}
                <script>
                    (function () {
                      setTimeout(function() {
                        if (typeof GEP == 'undefined') {
                          var toDisplay = document.querySelectorAll('[globale-product-price],[globale-order-details-price],[globale-order-list-price]');
                          toDisplay.forEach(function(i) {  i.style.visibility = 'visible'; });
} else {
                        }
                      }, 2000);
                    })()
                  </script>
                <!-- Global-e Script End-->
                </body>
</html> 
